<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HydraSync" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1E5A8B</item>
        <item name="colorPrimaryVariant">#1E5A8B</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#4CAF50</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
     <style name="Theme.HydraSync.Splash" parent="Theme.SplashScreen">
        <!-- Your drop.png -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/drop</item>
        <!-- Optional background color -->
         <item name="windowSplashScreenBackground">@color/hydra_blue</item>
        <!-- Optional animation duration -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- The theme that takes over after splash -->
        <item name="postSplashScreenTheme">@style/Theme.HydraSync</item>
    </style>



</resources>