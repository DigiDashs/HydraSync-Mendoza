<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/history_card_background"
    android:padding="16dp"
    android:layout_marginBottom="24dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_today"
            android:contentDescription="Date icon"
            app:tint="#1e5a8a"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oct 21, 2025"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1e5a8a" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 mL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1e5a8a" />

    </LinearLayout>

    <!-- Entries Container -->
    <LinearLayout
        android:id="@+id/entriesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Entries will be populated dynamically -->

    </LinearLayout>

</LinearLayout>